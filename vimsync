#!/bin/sh

# Download my vimrc and place it into ~/.vim

if ![ -d ~/.vim ]
then
	mkdir ~/.vim
fi

curl https://git.leonardgomez.xyz/leg7/vimsync/raw/branch/master/vimrc > ~/.vim/vimrc

# Install nord theme for Konsole

curl https://raw.githubusercontent.com/arcticicestudio/nord-konsole/develop/install.sh > ~/.local/share/konsole/install.sh
chmod +x ~/.local/share/konsole/install.sh
~/.local/share/konsole/install.sh

# Change keyboard settings
setxkbmap dvorak
setxkbmap --option caps:swapescape
